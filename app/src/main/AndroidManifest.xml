<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kylebruney.android.madcow">

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".FirstRunCheck"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.WorkoutActivityDayOne"
            android:screenOrientation="portrait"
            android:label="Day 1 Workout"/>
        <activity
            android:name=".Activity.WorkoutActivityDayTwo"
            android:screenOrientation="portrait"
            android:label="Day 2 Workout"/>
        <activity
            android:name=".Activity.WorkoutActivityDayThree"
            android:screenOrientation="portrait"
            android:label="Day 3 Workout"/>
        <activity
            android:name=".Activity.SettingsActivity"
            android:label="Settings"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.SetupWeightActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.ConfirmStartingWeightsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.HelpActivity"
            android:screenOrientation="portrait"
            android:label="Help" />
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:label="MadCow 5x5" />
        <activity
            android:name=".OnBoardingActivity"
            android:screenOrientation="portrait"
            android:label="Welcome!" />
    </application>

</manifest>